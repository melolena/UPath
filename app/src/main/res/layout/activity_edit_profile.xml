<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".EditProfile">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue"
        app:title="Editar Perfil"
        app:titleTextColor="@color/white"
        app:titleTextAppearance="@style/ToolbarTitleStyle"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Foto -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_profile_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="55dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/user_default_foreground" />
    </androidx.cardview.widget.CardView>

    <!-- Botão de trocar foto -->
    <ImageView
        android:id="@+id/btn_change_photo"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/ic_edit_white_foreground"
        app:tint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/card_profile_image"
        app:layout_constraintEnd_toEndOf="@id/card_profile_image"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="-8dp"
        android:background="@drawable/circle_dark_overlay"
        android:padding="6dp" />

    <!-- Label Nome -->
    <TextView
        android:id="@+id/label_edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:text="Editar nome:"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintTop_toBottomOf="@id/card_profile_image"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Campo Nome -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/email_underline_selector"
        app:startIconDrawable="@drawable/user_default_foreground"
        app:startIconTint="@color/white"
        app:boxBackgroundMode="none"
        app:layout_constraintTop_toBottomOf="@id/label_edit_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="#CCFFFFFF"
            android:textColorHint="#CCFFFFFF"
            android:textSize="17sp"
            android:hint="Seu nome..."
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Label Senha -->
    <TextView
        android:id="@+id/label_edit_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="30dp"
        android:text="Nova senha:"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintTop_toBottomOf="@id/input_layout_name"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/email_underline_selector"
        app:passwordToggleEnabled="true"
        app:startIconDrawable="@drawable/ic_lock"
        app:startIconTint="@color/white"
        app:passwordToggleTint="@color/white"
        app:boxBackgroundMode="none"
        app:layout_constraintTop_toBottomOf="@id/label_edit_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="#CCFFFFFF"
            android:textColorHint="#CCFFFFFF"
            android:hint="Deixe vazio para manter"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- BOTÕES -->
    <LinearLayout
        android:id="@+id/buttons_container"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/input_layout_password">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_cancel"
            android:text="Cancelar"
            android:backgroundTint="#FF5252"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:cornerRadius="10dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_confirm"
            android:text="Salvar"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/button_cadastro_tint"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:cornerRadius="10dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
