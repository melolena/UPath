<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".HomeUser">

    <!-- HEADER -->
    <include
        android:id="@+id/profile_header"
        layout="@layout/layout_profile_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TÍTULO -->
    <TextView
        android:id="@+id/welcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Bem-vindo ao UPath!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#1F2937"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintTop_toBottomOf="@id/profile_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- IMAGEM -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageHome"
        android:layout_width="340dp"
        android:layout_height="185dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/home_picture"
        app:shapeAppearanceOverlay="@style/RoundedImageHome"
        app:layout_constraintTop_toBottomOf="@id/welcomeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TEXTO 1 -->
    <TextView
        android:id="@+id/text_description_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="24dp"
        android:text="Realize o teste de orientação vocacional para identificar a área que mais se alinha ao seu perfil."
        android:textColor="#4B5563"
        android:textSize="15sp"
        android:fontFamily="@font/poppins"
        app:layout_constraintTop_toBottomOf="@id/imageHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TEXTO 2 -->
    <TextView
        android:id="@+id/text_description_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="24dp"
        android:text="Com suas informações de desempenho e interesse em bolsas, nossa plataforma analisará suas chances em programas como Sisu, Prouni, além de sugerir cursos compatíveis."
        android:textColor="#4B5563"
        android:textSize="15sp"
        android:fontFamily="@font/poppins"
        app:layout_constraintTop_toBottomOf="@id/text_description_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BOTÃO 1 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonEscolherTeste"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:text="Iniciar Teste"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:backgroundTint="#7C3AED"
        android:fontFamily="@font/poppins_semibold"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/text_description_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonSimulacao" />

    <!-- BOTÃO 2 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSimulacao"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#7C3AED"
        android:fontFamily="@font/poppins_semibold"
        android:text="Iniciar Simulação"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonEscolherTeste"
        app:layout_constraintTop_toBottomOf="@id/text_description_2" />


    <!-- MENU INFERIOR -->
    <include
        android:id="@+id/layout_bottom_nav"
        layout="@layout/layout_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
