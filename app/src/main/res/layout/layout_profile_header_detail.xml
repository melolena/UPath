<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"

    android:background="@drawable/header_bottom_rounded"
    android:padding="16dp">

    <ImageView
        android:id="@+id/icon_edit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="Editar Perfil"
        android:src="@drawable/ic_edit_white_foreground"
        app:layout_constraintEnd_toStartOf="@id/icon_notification"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@android:color/white" />

    <ImageView
        android:id="@+id/icon_notification"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="Notificações"
        android:src="@drawable/notification_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@android:color/white" />

<androidx.cardview.widget.CardView
android:id="@+id/card_profile_image"
android:layout_width="96dp"
android:layout_height="96dp"
android:layout_marginTop="32dp"
app:cardCornerRadius="48dp"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent">

<ImageView
    android:id="@+id/profile_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    android:src="@drawable/user_placeholder" />
</androidx.cardview.widget.CardView>

<TextView
android:id="@+id/text_user_name"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginTop="8dp"
android:fontFamily="@font/poppins_semibold"
android:text="Maurício Gabriel Jr"
android:textColor="@android:color/white"
android:textSize="18sp"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@id/card_profile_image" />

<TextView
android:id="@+id/text_user_email"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:fontFamily="@font/poppins"
android:text="mauricio.gabriel.al.jr@email.com"
android:textColor="#CCCCCC"
android:textSize="14sp"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@id/text_user_name" />

    <ImageView
        android:id="@+id/icon_navigate_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:contentDescription="Navegar para a próxima tela"
        android:src="@drawable/logoof_foreground"
        app:layout_constraintBottom_toBottomOf="@id/text_user_email"
        app:layout_constraintStart_toEndOf="@id/text_user_email"
        app:layout_constraintTop_toTopOf="@id/text_user_email"
        app:tint="@android:color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>