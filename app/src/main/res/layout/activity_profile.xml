<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- HEADER DETALHADO -->
    <include
        android:id="@+id/profile_detail_header"
        layout="@layout/layout_profile_header_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- OPÇÕES -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-24dp"
        android:paddingTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/profile_detail_header"
        app:layout_constraintBottom_toTopOf="@id/layout_bottom_nav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <include
                android:id="@+id/option_resultados"
                layout="@layout/item_profile_option"
                android:layout_marginBottom="16dp" />

            <include
                android:id="@+id/option_historico"
                layout="@layout/item_profile_option"
                android:layout_marginBottom="16dp" />

            <include
                android:id="@+id/option_salvos"
                layout="@layout/item_profile_option"
                android:layout_marginBottom="16dp" />

            <include
                android:id="@+id/option_planos"
                layout="@layout/item_profile_option"
                android:layout_marginBottom="16dp" />

            <include
                android:id="@+id/option_sobre_nos"
                layout="@layout/item_profile_option"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- BOTTOM NAV -->
    <include
        android:id="@+id/layout_bottom_nav"
        layout="@layout/layout_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
